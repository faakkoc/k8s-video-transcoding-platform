# API Gateway Configuration
# Kopiere diese Datei zu .env f√ºr lokale Entwicklung

# Application
APP_NAME=Video Transcoding API Gateway
APP_VERSION=0.1.0
DEBUG=false

# API Configuration
API_PREFIX=/api/v1
MAX_UPLOAD_SIZE_MB=500

# Kubernetes Configuration
KUBERNETES_NAMESPACE=video-transcoding
IN_CLUSTER=false

# Storage Configuration
STORAGE_TYPE=filesystem
UPLOAD_DIR=/tmp/uploads
OUTPUT_DIR=/tmp/outputs

# Job Configuration
TRANSCODING_WORKER_IMAGE=transcoding-worker:latest
JOB_TTL_SECONDS=86400
